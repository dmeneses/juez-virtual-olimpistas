<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Problem">
            <directory>./ProblemTest</directory>
        </testsuite>
    </testsuites>
    
    <filter>
        <whitelist>
            <directory suffix=".php">../../../module</directory>
            <exclude>
                <directory suffix=".php">../test</directory>
            </exclude>
        </whitelist>
        <blacklist>
            <directory suffix=".php">../../../vendor</directory>
        </blacklist>
    </filter>
    
    <logging>
        <log type="coverage-php" target="../../../build/coverage/coveragePro.cov"/>
        <log type="coverage-html" target="../../../build/coverage/report" charset="UTF-8"
             highlight="false" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../../../build/logs/cloverPro.xml"/>
        <log type="junit" target="../../../build/logs/junitPro.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>